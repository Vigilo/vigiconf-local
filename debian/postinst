#!/bin/sh
# postinst script for vigilo-connector-nagios
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
        MODULE=vigiconf-local
        PKGNAME=vigilo-$MODULE

        SERVER_HOME=/var/lib/vigilo/vigiconf
        SERVER_USER=vigiconf
        SERVER_NAME="$PKGNAME user"
        SERVER_GROUP=$SERVER_USER

        # 1. create group if not existing
        if ! getent group | grep -q "^$SERVER_GROUP:"; then
            echo -n "Adding group $SERVER_GROUP.."
            addgroup --quiet --system $SERVER_GROUP 2>/dev/null || true
            echo "..done"
        fi

        # 2. create homedir if not existing
        test -d $SERVER_HOME || mkdir $SERVER_HOME

        # 3. create user if not existing
        if ! getent passwd | grep -q "^$SERVER_USER:"; then
            echo -n "Adding system user $SERVER_USER.."
            adduser --quiet \
                    --system \
                    --ingroup $SERVER_GROUP \
                    --no-create-home \
                    --disabled-password \
                    $SERVER_USER 2>/dev/null || true
            echo "..done"
        fi

        # 4. adjust passwd entry
        usermod -c "$SERVER_NAME" \
           -d $SERVER_HOME   \
           -g $SERVER_GROUP  \
              $SERVER_USER

        # unlock the account
        if [ "`passwd -S $SERVER_USER | cut -d' ' -f2`" = "LK" ]; then
            # unlock the account
            dd  if=/dev/random bs=1 count=12 2>/dev/null | base64 - | \
                passwd --stdin $SERVER_USER >/dev/null
        fi

        mkdir -p  /var/lib/vigilo/vigiconf/.ssh
        chmod 700 /var/lib/vigilo/vigiconf/.ssh
        touch     /var/lib/vigilo/vigiconf/.ssh/authorized_keys
        chmod 600 /var/lib/vigilo/vigiconf/.ssh/authorized_keys
        chown $SERVER_USER:$SERVER_GROUP                    \
            /var/lib/vigilo/vigiconf                        \
            /var/lib/vigilo/vigiconf/.ssh                   \
            /var/lib/vigilo/vigiconf/.ssh/authorized_keys   \
            /etc/vigilo/vigiconf/new                        \
            /etc/vigilo/vigiconf/prod                       \
            /etc/vigilo/vigiconf/tmp                        \
            /etc/vigilo/vigiconf/old                        \
            /etc/vigilo/vigiconf

        chown root:$SERVER_USER /etc/vigilo/vigiconf/settings-local.ini
        chmod 640 /etc/vigilo/vigiconf/settings-local.ini
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
